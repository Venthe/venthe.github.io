---
import Social from "./Social.astro";

const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Jacek Lipiec. All rights reserved.
	<div class="social-links">
		<Social></Social>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: none;
	}
	@media (max-width: 720px) {
		.social-links {
			display: block;
		}
	}
</style>
